<div class="container" style="margin-top: 50px;margin-bottom:50px;">
    <table class="timetable_sub">
        <thead>
            <tr>
                <th>SL No.</th>
                <th>Date</th>
                <th>Address</th>
                <th>Total</th>
                <th>Payment</th>
                <th>Status</th>
                <th>Details</th>
            </tr>
        </thead>
        {{#each orders}}
        <tr class="rem1">
            <td class="invert">{{@index}}</td>
            <td class="invert-image">
                {{this.date}}
            </td>
            <td class="invert">
                {{this.delivery.address}}<br>
                {{this.delivery.city}}<br>
                {{this.delivery.state}}<br>
                {{this.delivery.zip}}<br>
                {{this.delivery.mobile}}
            </td>
            <td class="invert">
                Rs.{{this.total}}
            </td>
            <td class="invert">
                {{this.payment-method}}
            </td>
            <td class="invert">
                {{this.status}}
            </td>
            <td class="invert">
                <a class="btn btn-primary btn-order-placed" href="/view-order-details/{{this._id}}">
            View Details
        </a>
            </td>
        </tr>
        {{/each}}
    </table>
</div>
<style>
      a.btn-order-placed{
        margin-top: 20px;
        padding:10px 30px;
        background-color:#FFC229;
        color: #fff;
        border:none;
        transition: 0.3s;
    }
    a.btn-order-placed:hover{
        margin-top: 20px;
        padding:10px 30px;
        color:#FFC229;
        background-color: #fff;
        border:1px solid #000;
    }
</style>
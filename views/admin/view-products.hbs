<section>
    <div class="container mt-5">
        <div class="row mb-5">
            <a href='/admin/add-product' class="ml-auto"><div class="btn btn-primary">Add Product</div></a>
        </div>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">No</th>
                    <th scope="col">Name</th>
                    <th scope="col">Description</th>
                    <th scope="col">Price</th>
                    <th scope="col">Image</th>
                </tr>
            </thead>
            <tbody>
                {{#each products}}
                <tr>
                    <th scope="row">{{@index}}</th>
                    <td>{{this.name}}</td>
                    <td>{{this.description}}</td>
                    <td>{{this.price}}</td>
                    <td><img style="width:50px;height:50px;object-fit:contain;" src='/images/{{this._id}}.jpg' alt="" /></td>
                    <td><a class="btn btn-primary text-white" href="/admin/edit-product/{{this._id}}">Edit</a>
                    <a href="/admin/delete-product/{{this._id}}" 
                    class="btn btn-danger text-white" onclick="return confirm('Are you sure to delete {{this.name}}')">Delete</a></td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</section>
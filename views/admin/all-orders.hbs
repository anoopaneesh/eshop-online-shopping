<div class="container" style="margin-top: 50px;margin-bottom:50px;">
    <table class="timetable_sub">
        <thead>
            <tr>
                <th>SL No.</th>
                <th>Date</th>
                <th>Address</th>
                <th>Total</th>
                <th>Payment</th>
                <th>Details</th>
            </tr>
        </thead>
        {{#each orders}}
        <tr class="rem1">
            <td class="invert">{{@index}}</td>
            <td class="invert-image">
                {{this.date}}
            </td>
            <td class="invert">
                {{this.delivery.address}}<br>
                {{this.delivery.city}}<br>
                {{this.delivery.state}}<br>
                {{this.delivery.zip}}<br>
                {{this.delivery.mobile}}
            </td>
            <td class="invert">
                Rs.{{this.total}}
            </td>
            <td class="invert">
                {{this.payment-method}}
            </td>
            <td class="invert">
                <button class="btn btn-success" onclick="approveOrder('{{this._id}}')">
            Approve
        </button>
            </td>
        </tr>
        {{/each}}
    </table>
</div>
<script>
    async function approveOrder(orderId){
        fetch('/admin/approve-order/'+orderId).then(async(res)=>{
            let data = await res.json()
            if(data.status){
                location.href='/admin/all-orders'
            }
        })
    }
</script>
